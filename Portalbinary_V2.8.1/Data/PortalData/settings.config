<?xml version="1.0"?>

<!-- This file contains general Portal settings. An application restart is needed, to take affect for changes. -->

<appSettings>
  <!-- Defines the CSS used for the Portal.
-->
  <add key="CssFile" value="Data/Resources/Portal.css"/>
  
  <!-- Defines the CSS used for the Html-Edit Mode.
-->
  <add key="CssFileForEdit" value="Data/Resources/PortalEdit.css"/>
  
  <!-- Name of the website (shown in titlebar of the browser). 
-->
  <add key="Title" value="Personal .NET Portal"/>
  <!-- Definition of common meta tags.
  -->
  <add key="Description" value="This is a Portal based on Personal .NET Portal, found at www.dotnet-portal.net." />
  <add key="Author" value=""/>
  <add key="Keywords" value=".NET, Portal, ASP.NET"/>
  <add key="Robots" value="all"/>  <!-- Posible values: noindex, index, nofollow, all -->
  <!-- 
  Absolute path of the favicon. Leave it empty if no favicon should be used.
  Sample: http://www.yourdomain.com/favicon.ico
  -->
  <add key="FavIconPath" value=""/>
  <!-- Defines if the portal footer should be shown or not. 
-->
  <add key="UsePortalFooter" value="true"/>
  <!--
  Use Tab HttpHandler (true/fale)
  Set this,if you want to have unique URL for each tab.
-->
  <!--
  Path, where the portal resource files should be stored.
  ~ stands for the root directory of the portal.
  -->
  <add key="FCKeditor:UserFilesPath" value="/Data/Resources/"/>

  <add key="UseTabHttpModule" value="true"/>
  <!--
  Enable internal statistics.
-->
  <add key="EnableStatistics" value="true"/>
  <!--
  Path, where the statistic files should be stored.
  ~ stands for the root directory of the portal.
-->
  <add key="StatisticFilesPath" value="/Data/Statistics/"/>
  <!--
  Max. size of a single statistics file in KByte.
  This value takes only effect if EnableStatistics is true.
-->
  <add key="MaxStatisticsFileSize" value="100"/>
  <!-- 
  Keep Session Alive for number of minutes. 
   0 = no Special settings, use only Server configured Session Timout. 
  >0 = if a page is displayed, keep the session alive for the number of minutes. 
  -1 = if a page is displayed, keep the session alive for ever. 
-->
  <add key="SessionKeepAlive" value="0"/>
  <!--
  Prevents the browser from using the cache when a user is logged in.
-->
  <add key="PreventBrowserCache" value="false"/>
  
  
  <!-- Calendar Settings ******************************************************************************************* -->

  <!-- The Theme (CSS) of the Calendar 
  Sample: "jscalendar/calendar-win2k-1.css"
  -->
  <add key="CalendarTheme" value="jscalendar/calendar-blue.css"/>

  <!-- The Date format for the Calendar Control. If Empty, the default format for the current language defined
  in the web.config file ist used. 
  Sample: "yyyy-MM-dd" -->
  <add key="DateFormat" value=""/>

  <!-- The Date-Time format for the Calendar Control. If Empty, the default format for the current language defined
  in the web.config file ist used. 
  Sample: "yyyy-MM-dd HH:mm" -->
  <add key="DateTimeFormat" value=""/>

  <!-- Languagefile for the Calendar Control. If Empty, the default languagefile for the current language defined in
  the web.config file is used.
  Sample: "~/jscalendar/lang/calendar-en.js"
  -->
  <add key="SpecificLanguageFile" value=""/>
  
  
  <!-- Riverside Internet Forum Settings *************************************************************************** -->
  <add key="RiversideInternetForumsConnectionString" value="Trusted_Connection=true;database=RiversideInternetForums"/>
  <add key="RiversideInternetForumsAvatarsURL" value="Modules/RiversideInternetForums/avatars/"/>
  <add key="RiversideInternetForumsImagesURL" value="Modules/RiversideInternetForums/images/"/>
  <add key="RiversideInternetForumsUserManagementURL" value="mainpage.tab.aspx"/>
  <!--
  Show exceptions (true/false)
  If set to true exceptions will be displayed
-->
  <add key="ShowModuleExceptions" value="true"/>
  <!--
  Show SubTabs in Main Menu (true/false)
-->
  <add key="TabMenuShowSubTabs" value="true"/>
  
  <!-- Show the tab hierarchy on the SubTabs (Path to the Tab) -->
  <add key="ShowSubTabPath" value="true"/>
  
</appSettings>
